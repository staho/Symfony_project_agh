<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}Snuffles!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="shortcut icon" href="{{ asset('css/images/favicon.ico') }}"/>
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="all" />
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-1.4.2.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery.jcarousel.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-func.js') }}"></script>
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="shell">
        <div id="header">
            <div id="navigation">
                <ul>
                        <li><a href="{{ path('homepage') }}" {% block homepage_active %}{% endblock %} >HOME</a></li>
                        <li><a href="{{ path('adoptions') }}" {% block adoptions_active %}{% endblock %}>ADOPCJA</a></li>
                        <li><a href="{{ path('articles_show') }}" {% block articles_active %}{% endblock %}>ARTYKULY</a></li>
                        <li><a href="{{ path('yourpet') }}"{% block yourpet_active %}{% endblock %}>TWOJE ZWIERZE</a></li>
                        <li><a href="{{ path('opinions') }}"{% block opinions_active %}{% endblock %}>OPINIE</a></li>
                        <li class="with-dd"><a href="/login"{% block login_active %}{% endblock %}>LOGIN</a>
                            <div>
                                <ul>
                                    <li><a href="/register">REJESTRACJA</a></li>
                                    <li><a href="/resetting">Przypomnij hasło</a></li>
                                </ul>
                            </div></li>
                      <li class="with-dd"> <a href="#" {% block events_active %}{% endblock %}>WYDARZENIA</a>
                        <div>
                            <ul>
                                <li><a href="#">Charytatywne dziaranie</a></li>
                                <li><a href="#">Miska dla psa</a></li>
                                <li><a href="#">Stawiamy na łapy - bal dobroczynny</a></li>
                                <li><a href="#">Wybory najmilszego kota</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <a href="#" class="rss">RSS</a>
                <div class="cl">&nbsp;</div>
            </div>
            <h1 id="logo"><a href="{{ path('homepage') }}">Snuffles</a></h1>
            <div id="search"> <a href="#">Wyszukiwarka zwięrząt</a>
                <input type="text" name="string" value="Szukam..." class="field" />
                <input type="submit" name="submit" value="Search" class="submit" />
            </div>
            <div class="cl">&nbsp;</div>
        </div>

        {% block body %}{% endblock %}
    </div>
    <div id="footer">
        <div class="footerlink">
            <p class="lf">Copyright &copy; 2017 <a href="#">Snuffles</a> - All Rights Reserved</p>
            <p class="rf">Design by <a href="http://kstachowicz.pl/">kstachowicz.pl</a></p>
            <div style="clear:both;"></div>
        </div>
    </div>
    <script type="text/javascript">
        Cufon.now();
    </script>

    </body>
</html>
